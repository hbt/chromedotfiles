{
  "manifest_version": 2,
  "name": "Chrome dotfiles",
  "version": "0.0.1",
  "description": "inject ~/.chromedotfiles/<domain>.{js,css} into chrome tabs",
  "icons": {
     "128": "icon-128.png",
     "48": "icon-48.png"
  },
  "permissions": [
    "http://*/",
    "https://*/",
    "webNavigation",
    "tabs"
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js", "extension-reloader.js"]
  }
}
